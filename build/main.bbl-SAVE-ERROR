      \strng{namehash}{f6ceb479fbad239ebe43fbcfca608655}
      \strng{fullhash}{02098f1f131a7a6f5f3cadac3d96f521}
      \strng{bibnamehash}{f6ceb479fbad239ebe43fbcfca608655}
      \strng{authorbibnamehash}{f6ceb479fbad239ebe43fbcfca608655}
