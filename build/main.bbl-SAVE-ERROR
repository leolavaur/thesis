    \entry{pala_InformationSharingCybersecurity_2019}{article}{}
      \name{author}{2}{}{%
        {{hash=6ca31939e3a29d843fb0378f26505870}{%
           family={Pala},
           familyi={P\bibinitperiod},
           given={Ali},
           giveni={A\bibinitperiod}}}%
        {{hash=feecf7d9a563f29edc9c534b6e595ec9}{%
