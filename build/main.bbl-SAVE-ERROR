      \strng{namehash}{9ca9d2617d6443d6ec1f0a85f2e8cee6}
      \strng{fullhash}{749b28addca8ff6bbed2938cf7e1872f}
      \strng{bibnamehash}{9ca9d2617d6443d6ec1f0a85f2e8cee6}
