      \strng{namehash}{eb5d6e382e4f42409ca2291eef354eb4}
      \strng{fullhash}{dcedc8b5eb36415c78a09d82be716571}
      \strng{bibnamehash}{eb5d6e382e4f42409ca2291eef354eb4}
      \strng{authorbibnamehash}{eb5d6e382e4f42409ca2291eef354eb4}
      \strng{authornamehash}{eb5d6e382e4f42409ca2291eef354eb4}
