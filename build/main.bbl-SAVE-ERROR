      \strng{namehash}{eb3b9c7d54bcba2cc63e742ddbc45606}
      \strng{fullhash}{eb3b9c7d54bcba2cc63e742ddbc45606}
      \strng{bibnamehash}{eb3b9c7d54bcba2cc63e742ddbc45606}
      \strng{authorbibnamehash}{eb3b9c7d54bcba2cc63e742ddbc45606}
