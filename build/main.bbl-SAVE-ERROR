      \strng{fullhash}{bc2f0b490f74dd7026ce4ade69eadcfe}
      \strng{bibnamehash}{bc2f0b490f74dd7026ce4ade69eadcfe}
      \strng{authorbibnamehash}{bc2f0b490f74dd7026ce4ade69eadcfe}
      \strng{authornamehash}{33a5f7f9071e5b3263bea39e267c3f44}
      \strng{authorfullhash}{bc2f0b490f74dd7026ce4ade69eadcfe}
