      \strng{namehash}{5a9a1b6cb3e85a9b8d18fbee8d11faba}
      \strng{fullhash}{ef94c4a2c20103e06df1f9a3c65dda16}
      \strng{bibnamehash}{5a9a1b6cb3e85a9b8d18fbee8d11faba}
