      \strng{namehash}{0f80244ee4bc60e35a33906358a137b3}
      \strng{fullhash}{767d200b80f790d553d40fe5952be363}
      \strng{bibnamehash}{0f80244ee4bc60e35a33906358a137b3}
      \strng{authorbibnamehash}{0f80244ee4bc60e35a33906358a137b3}
