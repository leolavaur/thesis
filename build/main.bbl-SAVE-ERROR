      \strng{namehash}{d0fe4d43aa286cdb32c243d27909e734}
      \strng{fullhash}{804490bd32c8f9d7ead17fdd0294d434}
      \strng{bibnamehash}{804490bd32c8f9d7ead17fdd0294d434}
      \strng{authorbibnamehash}{804490bd32c8f9d7ead17fdd0294d434}
