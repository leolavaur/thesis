      \strng{namehash}{91902eb32f9c890f6a3f0544f4509ae6}
      \strng{fullhash}{63ff49aabe1a08a4bc16f8109adb3950}
      \strng{bibnamehash}{91902eb32f9c890f6a3f0544f4509ae6}
      \strng{authorbibnamehash}{91902eb32f9c890f6a3f0544f4509ae6}
      \strng{authornamehash}{91902eb32f9c890f6a3f0544f4509ae6}
