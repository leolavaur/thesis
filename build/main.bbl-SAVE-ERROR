      \strng{fullhash}{59961c1efd7115a304303c6f8d34e92b}
      \strng{bibnamehash}{5b55c0d3a605dc8a5606c88e9b86feed}
      \strng{authorbibnamehash}{5b55c0d3a605dc8a5606c88e9b86feed}
      \strng{authornamehash}{5b55c0d3a605dc8a5606c88e9b86feed}
