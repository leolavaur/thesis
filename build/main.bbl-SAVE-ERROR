      \field{title}{A Survey of Coordinated Attacks and Collaborative Intrusion Detection}
      \field{urlday}{21}
      \field{urlmonth}{7}
      \field{urlyear}{2021}
      \field{volume}{29}
      \field{year}{2010}
      \field{dateera}{ce}
      \field{urldateera}{ce}
