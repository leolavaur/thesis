      \strng{namehash}{d3fe7e810fc1981c9bbc575e02dce48a}
      \strng{fullhash}{cd4340991fa2af86bd30b10925aed96b}
      \strng{bibnamehash}{d3fe7e810fc1981c9bbc575e02dce48a}
