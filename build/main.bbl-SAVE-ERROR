      \field{journaltitle}{Computers \& Security}
      \field{langid}{english}
      \field{month}{2}
      \field{number}{1}
      \field{shortjournal}{Computers \& Security}
      \field{title}{A Survey of Coordinated Attacks and Collaborative Intrusion Detection}
      \field{urlday}{21}
      \field{urlmonth}{7}
