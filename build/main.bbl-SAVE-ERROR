      \strng{namehash}{0894ec142a62cdc31a5bf08359676dea}
      \strng{fullhash}{669d7b86de983cf17be9a8f043bc0700}
      \strng{bibnamehash}{0894ec142a62cdc31a5bf08359676dea}
      \strng{authorbibnamehash}{0894ec142a62cdc31a5bf08359676dea}
