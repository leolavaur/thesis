      \strng{namehash}{2c0b3e350d34e79a304f97d46276bf0b}
      \strng{fullhash}{93d64afec21a0d0a8502746d781ba077}
      \strng{bibnamehash}{2c0b3e350d34e79a304f97d46276bf0b}
      \strng{authorbibnamehash}{2c0b3e350d34e79a304f97d46276bf0b}
